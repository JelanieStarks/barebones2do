{
    "name": "Barebones2do Full Stack Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",                     // Python support
                "dbaeumer.vscode-eslint",               // Linting for JavaScript/JSX
                "esbenp.prettier-vscode",               // Code formatter
                "dsznajder.es7-react-js-snippets",      // React/Redux code snippets
                "ms-vscode.vscode-typescript-next",     // TypeScript support
                "bradlc.vscode-tailwindcss",            // CSS support
                "ms-vscode.vscode-json"                 // JSON support
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "eslint.workingDirectories": ["frontend"]
            }
        }
    },
    "forwardPorts": [3000, 5000],
    "portsAttributes": {
        "3000": {
            "label": "React Frontend",
            "onAutoForward": "notify"
        },
        "5000": {
            "label": "Flask Backend",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "pip3 install -r backend/requirements.txt && cd frontend && npm install",
    "remoteUser": "vscode"
}
  